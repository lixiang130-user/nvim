:nnoremap wv :vsp<CR>
:nnoremap ws :sp<CR>
:nnoremap ww :wa<CR>
:nnoremap wa :wa<CR>
:nnoremap ca :wa<CR>:qa<CR>
:nnoremap cc <C-w>c
:nnoremap ci <C-F4>
:nnoremap <C-h> <C-w>h
:nnoremap <C-j> <C-w>j
:nnoremap <C-k> <C-w>k
:nnoremap <C-l> <C-w>l
:vnoremap Y "+y
:nnoremap <S-h> gT
:nnoremap <S-l> gt
:nnoremap <S-k> gT
:nnoremap <S-j> gt
" :nnoremap <C-o> <M-[>
" :nnoremap <C-i> <M-]>
:nnoremap <C-]> gd<C-[>
:nnoremap <Space>d gd<C-[>
:nnoremap <Space>D gd<C-[>
:nnoremap gd *Nzz
:nnoremap * *Nzz


